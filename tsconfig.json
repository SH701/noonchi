{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "typeRoots": ["./types", "./node_modules/@types"],
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "declarations.d.ts"
  ]
}
